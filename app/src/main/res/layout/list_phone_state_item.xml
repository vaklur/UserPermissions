<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phone_state_title_TV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:text="@string/phone_state_title"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_state_number_text_TV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_state_number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_state_number_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone_state_number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_state_network_type_text_TV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_state_network_type"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_state_network_type_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone_state_network_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_state_operator_text_TV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_state_operator"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_state_operator_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone_state_operator" />
    </LinearLayout>

</LinearLayout>