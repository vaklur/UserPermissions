<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_title_TV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:text="@string/contact_title"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_name_text_TV"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_name_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_number_text_TV"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_number_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact_number" />
    </LinearLayout>

</LinearLayout>