<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.userpermissions.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenuFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_permissionFragment"
            app:destination="@id/permissionFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.userpermissions.sms_permission.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.userpermissions.AboutAppFragment"
        android:label="fragment_about_app"
        tools:layout="@layout/fragment_about_app" />
    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.example.userpermissions.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" >
        <action
            android:id="@+id/action_permissionFragment_to_smsPermissionExampleFragment"
            app:destination="@id/smsPermissionExampleFragment" />
    </fragment>
    <fragment
        android:id="@+id/smsPermissionExampleFragment"
        android:name="com.example.userpermissions.sms_permission.SmsPermissionExampleFragment"
        android:label="fragment_sms_permission_example"
        tools:layout="@layout/fragment_sms_permission_example" >
        <action
            android:id="@+id/action_smsPermissionExampleFragment_to_smsPermissionTheoryFragment"
            app:destination="@id/smsPermissionTheoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/smsPermissionTheoryFragment"
        android:name="com.example.userpermissions.sms_permission.SmsPermissionTheoryFragment"
        android:label="fragment_sms_permission_theory"
        tools:layout="@layout/fragment_sms_permission_theory" >
        <action
            android:id="@+id/action_smsPermissionTheoryFragment_to_smsPermissionExampleFragment"
            app:destination="@id/smsPermissionExampleFragment" />
    </fragment>
</navigation>